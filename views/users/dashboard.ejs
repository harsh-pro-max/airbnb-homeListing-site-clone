<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="mb-4"><i class="fa-solid fa-gauge"></i> Dashboard</h2>

  <!-- Profile Card -->
  <div class="card mb-4 p-3">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <% if (user.avatar && user.avatar.url) { %>
          <img src="<%= user.avatar.url %>" alt="Avatar" class="rounded-circle me-3" style="width: 70px; height: 70px; object-fit: cover;" />
        <% } else { %>
          <i class="fa-solid fa-user fa-3x me-3 text-secondary"></i>
        <% } %>
        <div>
          <h5 class="mb-1"><i class="fa-solid fa-user"></i> <%= user.name || user.username %></h5>
          <p class="text-muted mb-0"><i class="fa-solid fa-envelope"></i> <%= user.email %></p>
          <p class="text-muted mb-0"><i class="fa-solid fa-user-tag"></i> @<%= user.username %></p>
        </div>
      </div>
      <div>
        <a href="/edit-profile" class="btn btn-outline-primary btn-sm">
          <i class="fa-solid fa-pen-to-square"></i> Edit Profile
        </a>
      </div>
    </div>
  </div>

  <!-- Stats Row -->
  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card h-100 p-3">
        <h5 class="card-title"><i class="fa-solid fa-house"></i> Your Listings</h5>
        <p class="display-6"><%= userListingCount %></p>
        <!-- ✅ FIXED LINK -->
        <a href="/listings/my" class="btn btn-outline-primary btn-sm">View Listings</a>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="card h-100 p-3">
        <h5 class="card-title"><i class="fa-solid fa-book"></i> Your Bookings</h5>
        <p class="display-6"><%= userBookingCount %></p>
        <a href="/bookings/my" class="btn btn-outline-primary btn-sm">View Bookings</a>
      </div>
    </div>
  </div>

  <!-- Recent Bookings Table -->
  <div class="mt-5">
    <h4><i class="fa-solid fa-clock-rotate-left"></i> Recent Bookings</h4>
    <% if (recentBookings.length === 0) { %>
      <p>No bookings found.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover mt-3">
          <thead class="table-light">
            <tr>
              <th>Listing</th>
              <th>Location</th>
              <th>Check-In</th>
              <th>Check-Out</th>
              <th>Amount</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% recentBookings.forEach(b => { %>
              <tr>
                <td><%= b.listing?.title || "[Deleted]" %></td>
                <td><%= b.listing?.location || "N/A" %></td>
                <td><%= b.checkIn.toDateString() %></td>
                <td><%= b.checkOut.toDateString() %></td>
                <td>₹<%= b.totalPrice.toLocaleString("en-IN") %></td>
                <td>
                  <span class="badge <%= b.status === 'cancelled' ? 'bg-danger' : 'bg-success' %>">
                    <%= b.status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</div>
