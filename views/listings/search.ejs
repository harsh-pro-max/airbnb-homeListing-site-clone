<% layout("/layouts/boilerplate") %>

<h3 class="mt-4 ms-4">Search Results for "<%= query %>"</h3>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">

    <% if (searchResults.length === 0) { %>
        <h4 class="text-center text-muted mt-5">
            No results found for "<%= query %>"
        </h4>
    <% } %>

    <% searchResults.forEach(listing => { %>
        <div class="col">
            <div class="card listing-card" style="width: 20rem;">
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;">
                </a>

                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br/>
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                        <br>
                        <span class="text-muted" style="font-size:0.8rem;">
                            <%= listing.category %>
                        </span>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>

</div>
